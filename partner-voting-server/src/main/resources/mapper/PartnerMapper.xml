<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.voting.mapper.PartnerMapper">

    <!-- 新增合伙人 -->
    <insert id="insert" parameterType="com.voting.entity.Partner" useGeneratedKeys="true" keyProperty="id">
        insert into partner (user_id, level, invest_ratio, status, bind_time)
        values (#{userId}, #{level}, #{investRatio}, #{status}, #{bindTime})
    </insert>

    <!-- 分页查询合伙人 -->
    <select id="pageQuery" resultType="com.voting.vo.PartnerVO">
        select
            p.id as partnerId,
            u.username,
            u.name,
            u.phone,
            p.level,
            p.invest_ratio as investRatio,
            p.status
        from partner p
        left join sys_user u on p.user_id = u.id
        <where>
            <if test="levels != null and levels.size() > 0">
                and p.level in
                <foreach collection="levels" item="level" open="(" separator="," close=")">
                    #{level}
                </foreach>
            </if>
            <if test="status != null">
                and p.status = #{status}
            </if>
        </where>
        order by p.bind_time desc
    </select>

    <!-- 根据ID查询合伙人 -->
    <select id="getById" resultType="com.voting.entity.Partner">
        select id, user_id, level, invest_ratio, status, bind_time
        from partner
        where id = #{id}
    </select>

    <!-- 更新合伙人信息 -->
    <update id="update" parameterType="com.voting.entity.Partner">
        update partner
        <set>
            <if test="level != null">
                level = #{level},
            </if>
            <if test="investRatio != null">
                invest_ratio = #{investRatio},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
        </set>
        where id = #{id}
    </update>

    <!-- 根据ID删除合伙人 -->
    <delete id="deleteById">
        delete from partner where id = #{id}
    </delete>

    <!-- 根据筛选条件查询合伙人列表 -->
    <select id="listByFilter" resultType="com.voting.entity.Partner">
        select * from partner
        <where>
            <if test="levels != null and levels.size() > 0">
                and level in
                <foreach collection="levels" item="level" open="(" separator="," close=")">
                    #{level}
                </foreach>
            </if>
            <if test="status != null">
                and status = #{status}
            </if>
        </where>
        order by level, id
    </select>

</mapper>

<!--pages/login/index.wxml-->
<view class="container">
  <view class="login-header">
    <image class="logo" src="/assets/logo.png" mode="aspectFit" wx:if="{{false}}"></image> <!-- Placeholder for logo -->
    <view class="title">合伙人投票系统</view>
    <view class="subtitle">Partner Voting System</view>
  </view>

  <view class="login-form card">
    <view class="input-group">
      <text class="input-label">账号</text>
      <input class="input" type="text" placeholder="请输入用户名" model:value="{{username}}" />
    </view>
    
    <view class="input-group">
      <text class="input-label">密码</text>
      <input class="input" type="password" placeholder="请输入密码" model:value="{{password}}" />
    </view>

    <button class="btn btn-primary btn-block mt-lg" bindtap="handleLogin" loading="{{loading}}">登 录</button>
    
    <view class="divider mt-lg">
      <text class="divider-text">或</text>
    </view>

    <button class="btn btn-outline btn-block mt-md" bindtap="handleWechatLogin">
      微信一键登录
    </button>
  </view>

  <view class="footer">
    <text class="copyright">© 2025 Voting System</text>
  </view>
</view>

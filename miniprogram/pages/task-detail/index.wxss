/* pages/task-detail/index.wxss */
.container {
  padding: var(--spacing-md);
  background-color: var(--bg-color);
  min-height: 100vh;
}

.pb-footer {
  padding-bottom: 240rpx;
}

.detail-header {
  margin-bottom: var(--spacing-md);
}

.header-top {
  display: flex;
  justify-content: space-between;
  margin-bottom: var(--spacing-sm);
}

.detail-id {
  color: var(--text-light);
  font-size: 26rpx;
}

.detail-status {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: var(--radius-sm);
}

.status-active {
  background-color: rgba(59, 130, 246, 0.1);
  color: var(--primary-color);
}

.status-ended {
  background-color: rgba(107, 114, 128, 0.1);
  color: var(--text-secondary);
}

.detail-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: var(--spacing-md);
  line-height: 1.4;
}

.detail-meta {
  font-size: 24rpx;
  color: var(--text-secondary);
  display: flex;
  justify-content: space-between;
  border-top: 2rpx solid var(--border-color);
  padding-top: var(--spacing-sm);
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: var(--spacing-md);
  padding-left: 16rpx;
  border-left: 8rpx solid var(--primary-color);
  line-height: 1;
}

.rich-content {
  font-size: 28rpx;
  line-height: 1.6;
  color: var(--text-main);
  min-height: 200rpx;
}

.result-list {
  margin-bottom: var(--spacing-md);
}

.result-item {
  margin-bottom: var(--spacing-md);
}

.result-label {
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
  margin-bottom: 8rpx;
}

.my-vote {
  text-align: center;
  font-size: 28rpx;
  padding-top: var(--spacing-md);
  border-top: 2rpx solid var(--border-color);
}

.vote-choice {
  font-weight: bold;
  margin-left: 10rpx;
}

.vote-choice.agree { color: var(--success-color); }
.vote-choice.oppose { color: var(--error-color); }
.vote-choice.abstain { color: var(--text-secondary); }

/* Footer Action */
.footer-action {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color: #fff;
  padding: var(--spacing-md);
  box-shadow: 0 -4rpx 16rpx rgba(0,0,0,0.05);
  z-index: 100;
  box-sizing: border-box;
}

.deadline-tip {
  text-align: center;
  font-size: 24rpx;
  color: var(--warning-color);
  margin-bottom: var(--spacing-sm);
}

.action-buttons {
  display: flex;
  justify-content: space-between;
  gap: var(--spacing-sm);
}

.btn-vote {
  flex: 1;
  font-size: 28rpx;
  padding: 20rpx 0;
  border-radius: var(--radius-sm);
  color: #fff;
  line-height: 1.5;
}

.btn-agree { background-color: var(--success-color); }
.btn-oppose { background-color: var(--error-color); }
.btn-abstain { background-color: var(--text-secondary); }

.secondary-actions {
  text-align: center;
}

.link-btn {
  display: inline-block;
  font-size: 26rpx;
  color: var(--primary-color);
  text-decoration: underline;
  padding: 10rpx;
}

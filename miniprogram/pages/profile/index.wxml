<!--pages/profile/index.wxml-->
<view class="container">
  <view class="profile-header card">
    <view class="avatar">
      <image class="avatar-img" src="/assets/default-avatar.png" wx:if="{{false}}"></image>
      <view class="avatar-placeholder">{{userInfo.name[0]}}</view>
    </view>
    <view class="user-info">
      <view class="user-name">{{userInfo.name}}</view>
      <view class="user-role">{{userInfo.role === 'admin' ? '管理员' : '合伙人'}}</view>
    </view>
  </view>

  <view class="menu-list card">
    <view class="menu-item" bindtap="handleLogout">
      <text class="menu-text" style="color: var(--error-color);">退出登录</text>
    </view>
  </view>
</view>

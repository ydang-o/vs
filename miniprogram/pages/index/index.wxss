/* pages/index/index.wxss */
.container {
  background-color: var(--bg-color);
  height: 100vh;
}

.tabs {
  display: flex;
  background-color: #fff;
  border-bottom: 2rpx solid var(--border-color);
  position: sticky;
  top: 0;
  z-index: 10;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 24rpx 0;
  font-size: 28rpx;
  color: var(--text-secondary);
  position: relative;
}

.tab-item.active {
  color: var(--primary-color);
  font-weight: 500;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background-color: var(--primary-color);
  border-radius: 4rpx;
}

.task-list {
  height: calc(100vh - 88rpx); /* Subtract tab height */
  padding: var(--spacing-md);
  box-sizing: border-box;
}

.task-item {
  display: flex;
  flex-direction: column;
}

.task-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--spacing-sm);
}

.task-id {
  font-size: 24rpx;
  color: var(--text-light);
}

.task-status {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: var(--radius-sm);
}

.status-active {
  background-color: rgba(59, 130, 246, 0.1);
  color: var(--primary-color);
}

.status-ended {
  background-color: rgba(107, 114, 128, 0.1);
  color: var(--text-secondary);
}

.task-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: var(--spacing-md);
  line-height: 1.4;
}

.info-row {
  display: flex;
  margin-bottom: var(--spacing-xs);
  font-size: 26rpx;
}

.info-row .label {
  color: var(--text-secondary);
  width: 140rpx;
}

.info-row .value {
  color: var(--text-main);
  flex: 1;
}

.task-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-top: 2rpx solid var(--border-color);
  padding-top: var(--spacing-md);
}

.progress-text {
  font-size: 24rpx;
  color: var(--text-secondary);
}

.btn-sm {
  font-size: 24rpx;
  padding: 12rpx 24rpx;
  margin: 0;
}

.empty-state {
  text-align: center;
  padding-top: 100rpx;
}

.empty-text {
  color: var(--text-light);
  font-size: 28rpx;
}

.list-padding {
  height: 40rpx;
}
